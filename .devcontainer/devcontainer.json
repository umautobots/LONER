{
  "image": "cloner_slam:latest",
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "donjayamanne.python-environment-manager",
    "huizhou.githd"
  ],
  "mounts":[
    "source=/home/${env:USER}/Documents/ClonerSlamData/,target=/home/${env:USER}/data,type=bind",
    "source=/mnt/,target=/mnt,type=bind"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/${env:USER}/ClonerSLAM,type=bind",
  "workspaceFolder": "/home/${env:USER}/ClonerSLAM",
  "containerEnv": {"DISPLAY":"${env:DISPLAY}"},
  "runArgs": [
              "--privileged",
              "--gpus=all",
              "-e NVIDIA_DRIVER_CAPABILITIES=video,compute,utility",
              "--net=host",
              "--runtime=nvidia",
              "-e SDL_VIDEODRIVER=x11",
              "--shm-size=64G",
              "--ipc=host"
            ],
  "postStartCommand": "sudo ldconfig"
}